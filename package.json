{
  "name": "@jacarma/nil",
  "version": "1.0.2",
  "description": "Utility functions to easily handle nullable variables",
  "author": "jacarma",
  "license": "MIT",
  "repository": "jacarma/nil",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 node scripts/test.js --env=jsdom",
    "test:watch": "node scripts/test.js --env=jsdom",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "npm run build",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/public",
    "release": "np"
  },
  "dependencies": {},
  "devDependencies": {
    "@svgr/rollup": "^4.3.2",
    "@types/jest": "^24.0.18",
    "babel-core": "^6.26.3",
    "babel-preset-typescript": "^7.0.0-alpha.19",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.1.4",
    "dotenv": "8.1.0",
    "dotenv-expand": "5.1.0",
    "gh-pages": "^2.1.1",
    "jest": "24.9.0",
    "np": "^5.1.0",
    "rollup": "^1.21.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-typescript2": "^0.24.2",
    "rollup-plugin-url": "^2.2.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3",
    "whatwg-fetch": "^3.0.0"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "/Users/javiercarrasco/projects/nil/tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "typescript"
    ]
  }
}
